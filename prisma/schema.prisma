generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model HeroSlide {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  imgSrc      String
  title       String
  subtitle    String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ImpactStat {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  icon      String // e.g., 'users', 'school'. Must match an icon in the frontend.
  count     Int
  label     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  src       String
  caption   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Model for the Instagram posts section
model InstagramPost {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  src       String // This will be the image source URL
  caption   String // This will be the post caption
  postUrl   String   @unique // The direct link to the Instagram post
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VideoTestimonial {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  youtubeUrl  String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Model for News Articles
model NewsArticle {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl   String
  title      String
  articleUrl String
  source     String // e.g., "The Hindu", "Times of India"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


model AnnualReport {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  year        String   // e.g., "2021-22"
  title       String
  description String
  fileId      String   // Google Drive File ID
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GoalStat {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  count        Int
  label        String
  suffix       String?
  prefix       String?
  formatAsLakh Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Mentor {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  imgSrc    String
  name      String
  title     String
  tags      String[] // An array of strings for tags
  isVisible Boolean  @default(true) // Controls visibility on the frontend
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdvisoryBoardMember {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  imgSrc      String
  name        String
  title       String
  role        String
  description String
  isVisible   Boolean  @default(true) // Controls visibility on the frontend
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CoreTeamMember {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  imgSrc    String
  name      String
  title     String
  isVisible Boolean  @default(true) // Controls visibility on the frontend
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model ImpactStory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  imageUrl  String
  content   String
  isVisible Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}